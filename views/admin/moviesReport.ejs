<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href='https://unpkg.com/boxicons@2.0.7/css/boxicons.min.css' rel='stylesheet'>
    <title>Document</title>
    <style>
        @import url('https://fonts.googleapis.com/css2?family=Montserrat:wght@300;400;500;700&display=swap');

        body {
            margin: 0;
            padding: 0;
            font-family: 'Roboto', sans-serif;
        }

        .users-data {
            display: flex;
            text-align: center;
            justify-content: center;
            flex-direction: column;
        }

        table {
            border-collapse: collapse;
            border-spacing: 0;
            width: 60%;
            border: 1px solid #ddd;
            margin: 1.5rem auto 1rem auto;
        }

        th,
        td {
            text-align: center;
            padding: 16px;
        }

        tr:nth-child(odd) {
            background-color: lightgray;
        }

        th {
            background-color: #263238;
            color: #fff;
        }
    </style>
</head>

<body>
    <div class="upload-slider">
        <section class="home-section">
            <h1 style="text-align:center;">Cenflix | Report </h1>
            <div class="users-data">
                <table id="myTable">
                    <tr>
                        <th>MovieID</th>
                        <th>MovieName</th>
                        <th>ShowDate</th>
                        <th>ShowTime</th>
                        <th>TicketPrice</th>
                        <th>TotalTicketsBooked</th>
                        <th>TotalAmount</th>
                    </tr>

                    <% let i=0; %>
                        <% paymentDetails.forEach(function(movie){ %>
                            <tr>
                                <td>
                                    <%=++i%>
                                </td>
                                <td>
                                    <%=movie.MovieName%>
                                </td>
                                <td>
                                    <%=movie.ShowDate%>
                                </td>
                                <td>
                                    <%=movie.ShowTime%>
                                </td>
                                <td>
                                    <%=movie.get('TicketPrice')%>rs
                                </td>
                                <td>
                                    <%=movie.get('BookedSeats')%>
                                </td>
                                <td>
                                    <%=movie.get('TotalAmount')%>rs
                                </td>
                            </tr>
                            <% }) %>
                </table>
            </div>
        </section>

</body>

</html>